<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
     android:layout_height="450dp"
    tools:context="www.newproj.com.newpro.FacemenActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    android:layout_marginTop="50dp">

    <android.support.v7.widget.CardView
        android:id="@+id/skintone_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/skintone_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="@drawable/loh"
            android:text="        SKINTONE"
            android:textSize="35dp"
            android:visibility="visible"
            android:textColor="#000" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/facestructure_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/facestructure_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="@drawable/layouticon"
            android:text="FACE STRUCTURE"
            android:textSize="35dp"
            android:visibility="visible"
            android:textColor="#fff" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/bodystructure_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/bodystructure_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="@drawable/loh"
            android:text="BODY STRUCTURE"
            android:textSize="35dp"
            android:visibility="visible"
            android:textColor="#000" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/favourite_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="@drawable/layouticon">

        <TextView
            android:id="@+id/favourite_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/layouticon"
            android:gravity="center_vertical"
            android:text="        FAVORITES"
            android:textColor="#fff"
            android:textSize="35dp"
            android:visibility="visible" />
    </android.support.v7.widget.CardView>

   

</LinearLayout>
