<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.newproj.com.newpro.ProfilecardActivity"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download"
            android:layout_gravity="center"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHREEYA AMIN"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="25sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/collectioninprofile_et"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="9dp"
            android:background="@color/backgroundcolor"
            android:onClick="onClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:background="@drawable/loh"
                android:text="COLLECTIONS"
                android:textSize="10dp"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="#000"/>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/suggestioninprofile_et"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="9dp"
                android:onClick="onClick"
                android:background="@color/backgroundcolor">


                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_alignParentBottom="true"
                      android:gravity="center_vertical"
                      android:background="@drawable/layouticon"
                      android:text="  SUGGESTIONS"
                      android:textSize="11dp"
                      android:visibility="visible"
                      android:textStyle="bold"
                      android:textColor="#FFF"/>

            </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/updateinprofile_et"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="7dp"
            android:background="@color/backgroundcolor"
            android:onClick="onClick">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/loh"
                    android:text="     UPDATE"
                    android:textSize="11dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="#000"/>



        </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

